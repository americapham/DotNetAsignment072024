@model IEnumerable<CategoryDto>

@{
    ViewData["Title"] = "Catgeories List!";
}

<h1>@ViewBag.PageTitle</h1>
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Category Drescription</th>
            <th>Related Products</th>
        </tr>
    </thead>
    <tbody>
        @foreach (CategoryDto cat in Model)
        {
            <tr>
                <td><span>@cat.CategoryName</span></td>
                <td><span>@cat.Description</span></td>
                <td>
                    <a class="btn btn-info" asp-area="Products" 
                                            asp-controller="Home"
                                            asp-action="CategoryWiseProducts"
                                            asp-route-id="@cat.CategoryId">Show Related Products</a>
                </td>
            </tr>
        }
    </tbody>
</table>